<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body>
        <main class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    {% for image in detail.images %}
                        <img class="img-fluid" src="images/products/{{image.image_file_name}}">
                    {% endfor %}
                </div>
                <div class="col-md-6">
                    <h3>{{detail.product.name}}</h3>
                    <h5>{{detail.product.price}}</h5>
                    <p>{{detail.product.description}}</p>
                </div>
            </div>
        </main>
    </body>
</html>